                            <form action="filterForCustomer" method="POST">
                                <h2>Category</h2>
                                <div class="panel-group category-products" id="accordian">
                                    <c:set var="categoryChecked" value="false"/>
                                    <c:forEach var="category" items="${categoryList}">
                                        <c:if test="${category.getCategoryID() == categoryID}">
                                            <c:set var="categoryChecked" value="true"/>
                                        </c:if>
                                    </c:forEach>
                                    <input type="radio" name="categoryID" value="0" <c:if test="${not categoryChecked}">checked</c:if>>All<br>
                                    <c:forEach var="category" items="${categoryList}">
                                        <input type="radio" name="categoryID" value="${category.getCategoryID()}" 
                                               <c:if test="${category.getCategoryID() == categoryID}">checked</c:if>>
                                        ${category.getCategoryName()}<br>
                                    </c:forEach>
                                </div>

                                <div class="brands_products">
                                    <h2>Brands</h2>
                                    <div class="brands-name">
                                        <ul class="nav nav-pills nav-stacked">
                                            <c:set var="brandChecked" value="false"/>
                                            <c:forEach var="brand" items="${brandList}">
                                                <c:if test="${brand.getBrandID() == brandID}">
                                                    <c:set var="brandChecked" value="true"/>
                                                </c:if>
                                            </c:forEach>
                                            <input type="radio" name="brandID" value="0" <c:if test="${not brandChecked}">checked</c:if>>All<br>
                                            <c:forEach var="brand" items="${brandList}">
                                                <li><input type="radio" id="${brand.getBrandID()}" name="brandID" value="${brand.getBrandID()}" 
                                                           <c:if test="${brand.getBrandID() == brandID}">checked</c:if>>
                                                    <label for="${brand.getBrandID()}">${brand.getBrandName()}</label></li>
                                                </c:forEach>
                                        </ul>
                                    </div>
                                </div>

                                <input type="submit" class="btn btn-default check_out" value="Find">
                            </form>




                            <div class="shipping text-center"><!--shipping-->
                                <img src="images/home/shipping.jpg" alt="" />
                            </div><!--/shipping-->

